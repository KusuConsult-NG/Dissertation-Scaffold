# Authentication (NextAuth.js)
# Generate a secret: `openssl rand -base64 32`
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=

# Firebase Client (Get these from Firebase Console -> Project Settings)
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=

# Firebase Admin (Required for Custom Claims / Auth)
# Generate via Project Settings -> Service Accounts -> Generate Private Key
# Paste the simplified JSON string here
FIREBASE_SERVICE_ACCOUNT_KEY=

# Payments (Paystack)
NEXT_PUBLIC_PAYSTACK_KEY=
PAYSTACK_SECRET_KEY=

# AI (Hugging Face)
# Get free token at https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=
