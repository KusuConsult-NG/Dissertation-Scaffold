rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Posts images: Readable by all, writable by auth users
    match /posts/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // User uploads (avatars etc): Readable by all, writable by owner? 
    // For simplicity, sticking to authenticated write for now.
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
